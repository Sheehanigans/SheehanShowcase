@model Exercises.Models.Data.Student

@{
    ViewBag.Title = "DeleteStudent";
}

<div class="row">
    <div class="col-sx-12">
        <h3>Delete Student</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-sx-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(s => s.StudentId)
            <p>Are your sure you want to delete the student @Model.FirstName @Model.LastName</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel","List","Student", null, new { @class = "btn btn-sm btn-info"})
        }
    </div>
</div>

