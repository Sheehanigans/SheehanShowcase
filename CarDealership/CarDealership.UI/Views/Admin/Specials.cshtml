@model CarDealership.UI.Models.AdminSpecialVM

@{
    ViewBag.Title = "Specials";
}

<h2>Specials</h2>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Specials", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary("", new { @class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(m => m.Special.SpecialTitle, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Special.SpecialTitle, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Special.SpecialTitle)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Special.SpecialMessage, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Special.SpecialMessage, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Special.SpecialMessage)</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success" value="saveSpecial">Save</button>
                </div>
            </div>
        }

        @foreach(var special in Model.Specials)
        {
            @special.SpecialTitle
            @special.SpecialMessage 
            @Html.ActionLink("Delete", "DeleteSpecial", "Admin", new { id = special.SpecialId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this special?')" })
            <br/>
        }
    </div>
</div>
<div class="container" id="searchResults">
</div>