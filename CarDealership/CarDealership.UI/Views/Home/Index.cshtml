@model CarDealership.UI.Models.HomeVM

@{
    ViewBag.Title = "Home Page";
}

<h2>Specials</h2>
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            @foreach (var special in Model.Specials)
            {
                if (special == Model.Specials[0])
                {
                    <div class="item active carouselImage" style="max-height: 250px">
                        <img src="~/Images/scenicjpg.jpg"
                             alt="scenic view" />
                        <div class="carousel-caption">
                            <h3>@special.SpecialTitle</h3>
                            <h4>@special.SpecialMessage</h4>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item carouselImage" style="max-height: 250px">
                        <img src="~/Images/scenicjpg.jpg"
                             alt="scenic view"
                             style="width: 100%" />
                        <div class="carousel-caption">
                            <h3>@special.SpecialTitle</h3>
                            <h4>@special.SpecialMessage</h4>
                        </div>
                    </div>
                }

            }
        </div>
        <div>
            <!--Left and Right Controls-->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="row">
        <div class="col-xs-12">
            @if (Model.FeaturedListings != null)
            {
                <h3>Featured Listings</h3>
                foreach (var listing in Model.FeaturedListings)
                {
                    <div class="col-md-4">
                        <a href="~/Inventory/Details/@listing.ListingId" class="btn btn-block" id="featuredVehicle">
                            <img src="~/Images/@listing.ImageFileUrl" alt="@listing.ImageFileUrl" style="width: 300px" />
                            <p class="featuredListing"><strong>@listing.ModelYear @listing.MakeName @listing.ModelName</strong></p>
                            <p class="featuredListing"><strong>$@listing.SalePrice</strong></p>
                        </a>
                    </div>

                }
            }
        </div>
    </div>
</div>



