@model CarDealership.UI.Models.ContactFormVM

@{
    ViewBag.Title = "Contact Us";
}

<div class="container">
    <h2>Contact Us</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <!--contact form-->
                @Html.ValidationSummary()
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(c => c.ContactForm.ContactFormId)
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(c => c.ContactForm.CustomerName, new { @class = "form-control", placeholder = "Name"})
                        <span class="text-danger">@Html.ValidationMessageFor(c => c.ContactForm.CustomerName)</span>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        @Html.TextBoxFor(c => c.ContactForm.Email, new { @class = "form-control", placeholder = "Email" })
                        <span class="text-danger">@Html.ValidationMessageFor(c => c.ContactForm.Email)</span>
                    </div>
                    <div class="form-group">
                        <label>Phone:</label>
                        @Html.TextBoxFor(c => c.ContactForm.Phone, new { @class = "form-control", placeholder = "Phone" })
                        <span class="text-danger">@Html.ValidationMessageFor(c => c.ContactForm.Phone)</span>
                    </div>
                    <div class="form-group">
                        <label>Message:</label>
                        @Html.TextAreaFor(c => c.ContactForm.FormMessage, new { @class = "form-control", placeholder = "Message" })
                        <span class="text-danger">@Html.ValidationMessageFor(c => c.ContactForm.FormMessage)</span>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2984.0176647485514!2d-87.32610968443777!3d41.590500591341495!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8811c2402cb9d34f%3A0xec26dc2310608a9a!2sKentucky+St%2C+Gary%2C+IN+46402!5e0!3m2!1sen!2sus!4v1522214921260" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                <p>
                    Kentucky St<br/>
                    Kentucky St, Gary, IN 46402
                </p>
                <p>
                    Sales: 651-488-8888 <br/>
                    Service: 652-488-8888
                </p>
            </div>        
        </div>
    </div>

</div>









